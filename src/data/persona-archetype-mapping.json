  "selectionAlgorithm": {
    "weightedHybridRules": {
      "step1": "Calculate confidence gap between top archetype and others",
      "step2": "Determine distribution based on gap size",
      "step3": "Select personas based on weighted vulnerability scores",
      "step4": "Ensure 3-8 total cards within limits"
    },
    "confidenceGapCalculation": {
      "largeGap": {
        "threshold": "top_archetype_confidence > second_archetype_confidence + 20%",
        "selection": {
          "primaryArchetypePersonas": 5,
          "secondaryArchetypePersonas": 1,
          "totalCards": 6
        }
      },
      "mediumGap": {
        "threshold": "top_archetype_confidence > second_archetype_confidence + 10%",
        "selection": {
          "primaryArchetypePersonas": 4,
          "secondaryArchetypePersonas": 2,
          "totalCards": 6
        }
      },
      "smallGap": {
        "threshold": "top_archetype_confidence <= second_archetype_confidence + 10%",
        "selection": {
          "primaryArchetypePersonas": 3,
          "secondaryArchetypePersonas": 3,
          "totalCards": 6
        }
      }
    },
    "personaSelectionPriority": {
      "highRisk": "priority_weight = 3",
      "mediumRisk": "priority_weight = 2",
      "lowRisk": "priority_weight = 1"
    }
  },
  "implementationNotes": {
    "dataStructure": "Use this mapping to select persona cards based on user's top 2-3 archetypes",
    "algorithm": "Weight selection by risk level and archetype confidence scores",
    "limits": "Always respect 3-8 card limits regardless of calculation",
    "fallback": "If calculations result in <3 cards, add medium-risk personas until minimum reached"
  }
